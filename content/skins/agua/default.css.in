/* SECTION 4.1:Main navigation (top-nav) {{{2 */
#define HEIGHT_NAV 48px

#top-nav-wrapper {
width:WIDTH_FULL;
height:HEIGHT_NAV;
border:0;
padding:0;
margin:0 auto;
background-image: url('/skins/agua/bump_menubar_blue.png');
}

#top-nav-div {
color:white;
width:WIDTH_NAV;
border:0;
padding:0;
margin:0 auto;
height:HEIGHT_NAV;
}

ul.top-nav {
font-weight:bold;
font-size:12px;
margin:0px;
padding:0px;
height:HEIGHT_NAV;
}

li.top-nav {
float:left;
PACKED();
/*border-left:1px solid #FFF;
border-right:1px solid #000; */
height:HEIGHT_NAV;
}

li.top-nav-meta {
float:right;
height:HEIGHT_NAV;
PACKED();
}

a.top-nav, a.top-nav-meta {
padding-left:10px;
padding-right:10px;
padding-top:16px;
display:inline-block;
overflow:hidden;
color:#000;
height:32px;
}

a.top-nav:hover, a.top-nav-meta:hover, li.top-nav:hover, li.top-nav-meta:hover {
color:#FFF;
}
/* }}}2 Main navigation (top-nav) */
/* SECTION 4.2:Menu generics {{{2 */
  /* SECTION 4.3: Popup menus {{{3 */
#define HEIGHT_MENU_POPUP 24px
div.menu-popup {
position:absolute;
display:none;
border-left:1px solid black;
border-right:1px solid black;
border-bottom:1px solid black;
margin:0px;
padding:0px;
}

ul.menu-popup {
font-weight:bold;
font-size:12px;
color:#FFF;
PACKED();
background-color:AGUA_LIGHT_RED;
}

li.menu-popup {
margin:0px;
height:HEIGHT_MENU_POPUP;
padding:0px 8px;
}

a.menu-popup {
padding-left:8px;
margin-left:-8px;
padding-right:8px;
margin-right:-8px;
padding-top:4px;
display:inline-block;
overflow:hidden;
color:#FFF;
background-color:AGUA_LIGHT_RED;
height:20px; /* HEIGHT_MENU_POPUP - padding-top */
width:100%;
}

a.menu-popup:hover, li.menu-popup:hover {
color:#FFF;
background-color:AGUA_LIGHTER_RED;
}
