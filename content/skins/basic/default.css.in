/* SECTION 4:Common toplevel content {{{1 */
/* SECTION 4.1:Main navigation (top-nav) {{{2 */
#define HEIGHT_NAV 24px
#top-nav-div {
background-color:JOF_RED;
color:white;
width:WIDTH_FULL;
margin:0px auto 0px auto;
border-left:1px solid black;
border-right:1px solid black;
border-bottom:1px solid black;
height:HEIGHT_NAV;
}

ul.top-nav {
font-weight:bold;
font-size:12px;
margin:0px;
padding:0px;
height:HEIGHT_NAV;
}

li.top-nav {
float:left;
border-right:1px solid black;
margin:0px;
padding:0px;
height:HEIGHT_NAV;
}

li.top-nav-meta {
float:right;
height:HEIGHT_NAV;
border-left:1px solid black;
margin:0px;
padding:0px;
}

a.top-nav, a.top-nav-meta {
padding-left:8px;
padding-right:8px;
padding-top:4px;
display:inline-block;
overflow:hidden;
color:#FFF;
background-color:JOF_RED;
height:20px; /* HEIGHT_NAV - padding-top */
}

a.top-nav:hover, a.top-nav-meta:hover, li.top-nav:hover, li.top-nav-meta:hover {
color:JOF_RED;
background-color:#FFF;
}
/* }}}2 Main navigation (top-nav) */
/* SECTION 4.2:Menu generics {{{2 */
  /* SECTION 4.2.1: Popup menus {{{3 */
#define HEIGHT_MENU_POPUP 20px
div.menu-popup {
position:absolute;
display:none;
border-left:1px solid black;
border-right:1px solid black;
border-top:1px solid black;
margin:0px;
padding:0px;
}

ul.menu-popup {
font-weight:bold;
font-size:12px;
color:#FFF;
PACKED();
background-color:JOF_RED;
}

li.menu-popup {
border-bottom:1px solid black;
margin:0px;
height:HEIGHT_MENU_POPUP;
padding:0px 8px;
}

a.menu-popup {
padding-left:8px;
margin-left:-8px;
padding-right:8px;
margin-right:-8px;
padding-top:4px;
display:inline-block;
overflow:hidden;
color:#FFF;
background-color:JOF_RED;
height:16px; /* HEIGHT_MENU_POPUP - padding-top */
width:100%;
}

a.menu-popup:hover, li.menu-popup:hover {
color:JOF_RED;
background-color:#FFF;
}
   /* }}}3 Popup menus */
  /* SECTION 4.2.2: Tool menus {{{3 */
#define HEIGHT_MENU_TOOLS 20px
div.menu-tools {
width:190px; /* WIDTH_SIDEBAR - 20 */
