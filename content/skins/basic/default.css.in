}

li.menu-tools-title {
width:100%;
display:block;
text-align:center;
padding: 10px 0;
color:#000;
background-color:#FFF;
border-bottom:1px solid #000;
}


ul.menu-tools {
font-weight:bold;
font-size:12px;
color:#FFF;
PACKED();
background-color:JOF_RED;
}

li.menu-tools {
margin:0px;
height:HEIGHT_MENU_TOOLS;
padding:0px 8px;
border-bottom:1px solid #000;
}

a.menu-tools {
padding-left:8px;
margin-left:-8px;
padding-right:8px;
margin-right:-8px;
padding-top:4px;
display:inline-block;
overflow:hidden;
color:#FFF;
background-color:JOF_RED;
height:16px; /* HEIGHT_MENU_TOOLS - padding-top */
width:100%;
}

a.menu-tools:hover, li.menu-tools:hover {
color:JOF_RED;
background-color:#FFF;
}
