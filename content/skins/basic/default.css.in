/* SECTION 1: Common values and macros */
  /* Colors */
#define JOF_RED         #C82020
#define JOF_DARK_RED    #851414
#define JOF_DARKER_RED  #641010
#define JOF_LIGHT_RED   #E83030
#define JOF_LIGHTER_RED #F84040

  /* Dimensions */
#define WIDTH_FULL     850px /* Overall width */
#define WIDTH_SIDEBAR  210px /* Left column width */
#define WIDTH_WORKAREA 640px /* Right workarea width */
#define WIDTH_APP      460px /*   App area (left workarea) */
#define WIDTH_MULTIBAR 180px /*   Multibar (right workarea) */
#define HEIGHT_CONTENT 400px 

/* SECTION 2: Import common CSS */
#include "../common/default.css.h"

/* SECTION 3: Import block CSS */
#include "block-map.css.h"
#include "block-calendar.css.h"
#include "block-story.css.h"
#include "util-form.css.h"
#include "block-video.css.h"

body {
font-family:sans-serif;
font-size:11pt;
background: #FFFFFF url('/skins/basic/gradient_navy.png') repeat-x;
color:black;
padding:0px 0px 0px 0px;
margin:0px 0px 0px 0px;
}

#skin-basic-header {
display:block;
width:WIDTH_FULL;
height:100px;
/*background: #FFF url('/skins/basic/header_bg.png') no-repeat; */
margin: 10px auto 0px auto;
border: 1px solid black;
}

/* NAV section */
#define HEIGHT_NAV 24px
#top-nav-div {
width:WIDTH_FULL;
margin: 0px auto 0px auto;
border-left: 1px solid black;
border-right: 1px solid black;
border-bottom: 1px solid black;
background-color: JOF_RED;
color:white;
height: HEIGHT_NAV;
}


ul.top-nav {
font-weight: bold;
font-size: 12px;
margin:0px;
padding:0px;
/*background-color: #000;*/
height: HEIGHT_NAV;
}

li.top-nav {
float: left;
border-right: 1px solid black;
margin: 0px;
height: HEIGHT_NAV;
padding:0px;
}

li.top-nav-meta {
float: right;
border-left: 1px solid black;
margin: 0px;
height: HEIGHT_NAV;
padding:0px;
}

li.top-nav-label {
float: right;
margin: 0 24px 0 24px;
border:0;
height: HEIGHT_NAV;
color:#AAA;
}

a.top-nav {
padding-left: 8px;
padding-right: 8px;
padding-top: 4px;
display:inline-block;
overflow:hidden;
color:#FFF;
/*background-color:#FE4110;*/
background-color:JOF_RED;
height: 20px; /* HEIGHT_NAV - padding-top */
}

a.top-nav:hover, li.top-nav:hover {
/*color:#FE4110;*/
color:JOF_RED;
background-color:#FFF;
}

/* FOOTER section */
#footer-div {
width:WIDTH_FULL;
height: 36px;
margin: 0px auto 0px auto;
}

.footer-text {
display:block;
font-size:9pt;
font-weight: normal;
width: WIDTH_FULL;
margin:0px auto 0px auto;
border:0px;
padding:0px;
text-align: center;
}

/* PARTNER block */
#partner-div {
width:WIDTH_FULL;
height: 36px;
margin: 0px auto 0px auto;
}


ul.partner-nav {
font-weight: normal;
font-size: 10px;
margin:0px;
padding:0px;
/*background-color: #000;*/
height: 36px;
}

li.partner-nav-extern {
float: right;
border: 0px;
margin-left: 1px;
margin-right: 1px;
padding-top: 2px;
height: 36px;
}

li.partner-nav-ref {
float: left;
border: 0px;
margin-left: 4px;
margin-right: 4px;
padding-top: 2px;
height: 36px;
}

a.partner-nav {
padding: 0px;
border: 0px;
margin: 0px;
overflow:hidden;
height: 36px;
}

#copyright-div {
font-size:9pt;
font-weight: normal;
width: WIDTH_FULL;
margin:0px auto 0px auto;
border:0px;
padding:0px;
text-align: center;
}

/* toplevel content areas */
#content-div {
display:block;
width:WIDTH_FULL;
min-height: HEIGHT_CONTENT;
border-left: 1px solid black;
border-right: 1px solid black;
border-bottom: 1px solid black;
border-top: 0;
margin: 0px auto 0px auto;
background-color: #FFF;
color:black;
}

#sidebar-div {
float:left;
display:block;
width:WIDTH_SIDEBAR;
min-height: HEIGHT_CONTENT;
PACKED();
}

#workarea-div {
float:left;
display:block;
width:WIDTH_WORKAREA;
min-height: HEIGHT_CONTENT;
padding:0px;
border:0px;
margin: 0 0 0 -1px;
}

#application-div {
float:left;
display:block;
width:WIDTH_APP;
min-height:HEIGHT_CONTENT;
PACKED();
}

#multibar-div {
float:left;
display:block;
width:WIDTH_MULTIBAR;
min-height: HEIGHT_CONTENT;
PACKED();
}

/*
 * Generic block support 
 */
.block-outer-div {
/* Center and space all primary block objects */
margin-left:auto;
margin-right:auto;
margin-top:10px;
}

.block-centered {
margin-left:auto;
margin-right:auto;
text-align:center;
}

.block-image {
display:block;
margin-left:auto;
margin-right:auto;
}

.image-caption {
display:block;
text-align:center;
}
