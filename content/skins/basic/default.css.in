/* SECTION 3:Common toplevel containers {{{1 */
  /* These control the base look and layout; required for all skins */
body {
color:black;
font-family:sans-serif;
font-size:11pt;
font-weight:normal;
background:#FFF url('/skins/basic/gradient_navy.png') repeat-x;
PACKED();
}

  /* Screen divisions {{{2 */
      /* These should generally have no margins....
       * content spacing is handled in containers below 
       */
#content-div {
display:block;
width:WIDTH_FULL;
margin:0px auto 0px auto;
min-height:HEIGHT_CONTENT;
border-left:1px solid black;
border-right:1px solid black;
border-bottom:1px solid black;
border-top:0;
background-color:#FFF;
color:black;
}

#sidebar-div {
float:left;
display:block;
width:WIDTH_SIDEBAR;
min-height:HEIGHT_CONTENT;
PACKED();
}

#workarea-div {
float:left;
display:block;
width:WIDTH_WORKAREA;
min-height:HEIGHT_CONTENT;
padding:0px;
border:0px;
margin:0 0 0 -1px;
}

#application-div {
float:left;
display:block;
width:WIDTH_APP;
min-height:HEIGHT_CONTENT;
PACKED();
}

#multibar-div {
float:left;
display:block;
width:WIDTH_MULTIBAR;
min-height:HEIGHT_CONTENT;
PACKED();
}

#tagline-div {
margin-left:auto;
margin-right:auto;
text-align:center;
font-style:italic;
font-size:14pt;
}
  /* }}}2 Screen divisions */
  /* Content containers {{{2 */
#content-container { /* Full-width page content */
width:WIDTH_CONTENT_CONTAINER;
border:0;
padding:0;
margin:0 auto;
}

#sidebar-container { /* Sidebar content */
width:WIDTH_SIDEBAR_CONTAINER;
border:0;
padding:0;
margin-left:WIDTH_GUTTER;
}

#workarea-container {
width:WIDTH_WORKAREA_CONTAINER;
margin-left:WIDTH_GUTTER;
height:auto;
}

#application-container {
width:WIDTH_APP_CONTAINER;
margin-left:WIDTH_GUTTER;
}

#multibar-container {
width:WIDTH_MULTIBAR_CONTAINER;
margin-left:WIDTH_GUTTER;
}

  /* }}}2 Content containers */


