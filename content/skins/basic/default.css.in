/* SECTION 1: Values and macros (common and skin-specific) {{{1 */
  /* Common dimensions {{{2 */
#define WIDTH_FULL     850px /* Overall width */
#define WIDTH_SIDEBAR  210px /* Left column width */
#define WIDTH_WORKAREA 640px /* Right workarea width */
#define WIDTH_APP      460px /*   App area (left workarea) */
#define WIDTH_MULTIBAR 180px /*   Multibar (right workarea) */
#define HEIGHT_CONTENT 400px 
  /* }}}2 */
  /* Skin-specific colors {{{2 */
#define JOF_RED         #C82020
#define JOF_DARK_RED    #851414
#define JOF_DARKER_RED  #641010
#define JOF_LIGHT_RED   #E83030
#define JOF_LIGHTER_RED #F84040
  /* }}}2 */
/* }}}1 */
/* SECTION 2: Common CSS for all skins {{{1 */
#include "../common/default.css.h"
/* }}}1 */
/* SECTION 3: Common toplevel containers {{{1 */
  /* These control the base look and layout; required for all skins */
body {
font-family:sans-serif;
font-size:11pt;
background: #FFFFFF url('/skins/basic/gradient_navy.png') repeat-x;
color:black;
padding:0px 0px 0px 0px;
margin:0px 0px 0px 0px;
}

#content-div {
display:block;
width:WIDTH_FULL;
min-height: HEIGHT_CONTENT;
border-left: 1px solid black;
border-right: 1px solid black;
border-bottom: 1px solid black;
border-top: 0;
margin: 0px auto 0px auto;
background-color: #FFF;
color:black;
}

#sidebar-div {
float:left;
display:block;
width:WIDTH_SIDEBAR;
min-height: HEIGHT_CONTENT;
PACKED();
}

#workarea-div {
float:left;
display:block;
width:WIDTH_WORKAREA;
min-height: HEIGHT_CONTENT;
padding:0px;
border:0px;
margin: 0 0 0 -1px;
}

#application-div {
float:left;
display:block;
width:WIDTH_APP;
min-height:HEIGHT_CONTENT;
PACKED();
}

#multibar-div {
float:left;
display:block;
width:WIDTH_MULTIBAR;
min-height: HEIGHT_CONTENT;
PACKED();
}

#tagline-div {
}
/* }}}1 Common toplevel containers */
/* SECTION 4: Common toplevel content {{{1 */
/* SECTION 4.1: Main navigation (top-nav) {{{2 */
#define HEIGHT_NAV 24px
#top-nav-div {
width:WIDTH_FULL;
margin: 0px auto 0px auto;
border-left: 1px solid black;
border-right: 1px solid black;
border-bottom: 1px solid black;
background-color: JOF_RED;
color:white;
height: HEIGHT_NAV;
}

ul.top-nav {
font-weight: bold;
font-size: 12px;
margin:0px;
padding:0px;
/*background-color: #000;*/
height: HEIGHT_NAV;
}

li.top-nav {
float: left;
border-right: 1px solid black;
margin: 0px;
height: HEIGHT_NAV;
padding:0px;
}

li.top-nav-meta {
float: right;
border-left: 1px solid black;
margin: 0px;
height: HEIGHT_NAV;
padding:0px;
}

li.top-nav-label {
float: right;
margin: 0 24px 0 24px;
border:0;
height: HEIGHT_NAV;
color:#AAA;
}

a.top-nav {
padding-left: 8px;
padding-right: 8px;
padding-top: 4px;
display:inline-block;
overflow:hidden;
color:#FFF;
background-color:JOF_RED;
height: 20px; /* HEIGHT_NAV - padding-top */
}

a.top-nav:hover, li.top-nav:hover {
color:JOF_RED;
background-color:#FFF;
}
/* }}}2 Main navigation (top-nav) */
/* SECTION 4.2: Footer {{{2 */
  /* Footer overall {{{3 */
#footer-div {
width:WIDTH_FULL;
height: 36px;
margin: 0px auto 0px auto;
}
.footer-text {
display:block;
font-size:9pt;
font-weight: normal;
width: WIDTH_FULL;
margin:0px auto 0px auto;
border:0px;
padding:0px;
text-align: center;
}
  /* }}}3 Footer overall */
  /* Footer contents {{{3 */
#footer-copyright-div {
}
#footer-contact-div {
}
#footer-validator-div {
}
  /* }}}3 Footer contents */

/* }}}2 Footer */
/* SECTION 4.3: Partner links {{{2 */
#partner-div {
width:WIDTH_FULL;
height: 36px;
margin: 0px auto 0px auto;
}

ul.partner-nav {
font-weight: normal;
font-size: 10px;
margin:0px;
padding:0px;
/*background-color: #000;*/
height: 36px;
}

li.partner-nav-extern {
float: right;
border: 0px;
margin-left: 1px;
margin-right: 1px;
padding-top: 2px;
height: 36px;
}

li.partner-nav-ref {
float: left;
border: 0px;
margin-left: 4px;
margin-right: 4px;
padding-top: 2px;
height: 36px;
}

a.partner-nav {
padding: 0px;
border: 0px;
margin: 0px;
overflow:hidden;
height: 36px;
}

/* }}}2 Partner links */
/* SECTION 4.4: Generic block support {{{2 */
.block-outer-div {
margin-left:auto;
margin-right:auto;
margin-top:10px;
}

.block-image {
display:block;
margin-left:auto;
margin-right:auto;
}
/* }}}2 Generic block support */
