/* SECTION 6.2: Map blocks {{{2 */
#define MAP_HEIGHT 350px
#define MAP_WIDTH  350px

#block-map-div {
width:MAP_WIDTH;
margin-top:10px;
margin-left:auto;
margin-right:auto;
}

.embedded-map {
height:MAP_HEIGHT;
width:MAP_WIDTH;
}
/* }}}2 Map blocks */
/* SECTION 6.3: Calendar {{{2 */
  /* Layout {{{3 */
.block-calendar-div {
width:90%;
text-align:center;
}

.block-calendar-row, #block-calendar-table {
width:100%;
border:1px solid black;
}
  /* }}}3 Layout */
  /* Cell display {{{3 */
.block-calendar-previous, .block-calendar-next {
font-size:10pt;
color:#888;
background-color:JOF_DARK_RED;
}

.block-calendar-current {
color:white;
font-size:10pt;
font-weight:bold;
background-color:JOF_RED;
}
  /* }}}3 Cell display */
/* }}}2 Calendar */
/* SECTION 6.4: Stories {{{2 */
  /* Headlines {{{3 */
.story-headline {
color:JOF_DARKER_RED;
border-bottom: 2px solid JOF_DARKER_RED;
margin:0px;
}

h1.story-headline {
font-size:20pt;
}

h2.story-headline {
font-size:15pt;
}

  /* }}}3 Headlines */
  /* Images/bylines {{{3 */
.story-lede {
float:left;
margin:5px;
}

.story-banner {
display:block;
margin-left:auto;
margin-right:auto;
}
  /* }}}3 Images/bylines */
  /* Text {{{3 */
.story-span {
margin-top:5px;
display:block;
}

.story-span a {
text-decoration:underline;
}
