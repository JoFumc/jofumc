/* SECTION 1: Common values and macros */
#define WINESKIN_RED #983B59
#define WINESKIN_LIGHT_RED #A84B69
#define WINESKIN_LIGHTER_RED #B85B79
#define WINESKIN_BORDER #333
#define WIDTH_FULL 880px
#define WIDTH_LEFT 180px
#define WIDTH_RIGHT 700px
#define HEIGHT_CONTENT 400px

#define MAP_HEIGHT 500px
#define MAP_WIDTH  500px

/* SECTION 2: The bits */
body {
color: #333;
font-family:'lucida grande',tahoma,verdana,arial,sans-serif;
font-size:13px;
font-weight:normal;
background: #FFF url('/skins/wine/red_bar.png') repeat-x;
padding:0px 0px 0px 0px;
margin:0px 0px 0px 0px;
}

#red-bar-spacer {
display:block;
height:10px;
width:100%;
}

#red-bar-content {
width:WIDTH_FULL;
height:32px;
margin:0 auto 0 auto;
}

#red-bar-logo {
width:WIDTH_LEFT;
height:32px;
float:left;
margin:auto;
}

/* Special images */
img.frameless {
margin:0px;
border:0px;
padding:0px;
}

/* NAV section */
#top-nav-div {
float:right;
border-top:1px solid WINESKIN_BORDER;
border-left:1px solid WINESKIN_BORDER;
border-right:1px solid WINESKIN_BORDER;
border-bottom:0;
margin-top:-1px;
margin-left:-1px;
margin-right:-1px;
margin-bottom:0;
background-color:WINESKIN_LIGHT_RED;
color:white;
height: 32px;
width:WIDTH_RIGHT;
}

ul.top-nav {
list-style-type: none;
list-style-image: none;
font-weight: bold;
font-size: 12px;
margin:0px;
padding:0px;
height: 32px;
}

li.top-nav {
float: right;
border:0px;
margin:0px;
padding:0px;
height:32px;
}

li.top-nav-meta {
float: right;
border:0px;
margin: 0px;
padding:0px;
height: 32px;
}

a.top-nav {
padding-left: 10px;
padding-right: 10px;
padding-top: 8px;
overflow:hidden;
color:#FFF;
background-color:WINESKIN_LIGHT_RED;
text-decoration: none;
height: 22px;
display:inline-block;
}

li.top-nav:hover, li.top-nav-meta:hover {
background-color:WINESKIN_LIGHTER_RED;
color:#FFF;
text-decoration: none;
}

/* PARTNER section */
#partner-div {
display:inline-block;
width:WIDTH_LEFT;
height: 36px;
margin: 0px auto 0px auto;
border: 1px solid WINESKIN_BORDER;
}

ul.partner-nav {
list-style-type: none;
list-style-image: none;
font-weight: normal;
font-size: 10px;
margin:0px;
padding:0px;
/*background-color: #000;*/
height: 36px;
}

li.partner-nav-extern {
float: left;
border: 0px;
margin-left: 1px;
margin-right: 1px;
padding-top: 2px;
height: 36px;
}

li.partner-nav-ref {
float: left;
border: 0px;
margin-left: 4px;
margin-right: 4px;
padding-top: 2px;
height: 36px;
}

a.partner-nav {
padding: 0px;
border: 0px;
margin: 0px;
overflow:hidden;
text-decoration: none;
height: 36px;
}

/* FOOTER section */
#footer-div {
width:850px;
height: 36px;
margin: 0px auto 0px auto;
}

#copyright-div {
font-size:9pt;
font-weight: normal;
width: 850px;
margin:0px auto 0px auto;
border:0px;
padding:0px;
text-align: center;
}

/* CONTENT PANES */
#content-div {
display:block;
width:WIDTH_FULL;
margin: 0px auto auto auto;
min-height:HEIGHT_CONTENT;
height:auto;
}

#sidebar-div {
float:left;
display:block;
width:WIDTH_LEFT;
min-height:HEIGHT_CONTENT;
border:0px;
margin:0px;
padding:0px;
height:600px;
}

#workarea-div {
float:right;
display:block;
position:static;
width:WIDTH_RIGHT;
min-height:HEIGHT_CONTENT;
border-right:1px solid WINESKIN_BORDER;
border-bottom:1px solid WINESKIN_BORDER;
border-left:1px solid WINESKIN_BORDER;
border-top:0px;
margin:0px -1px -1px -1px;
padding:0px;
}

/* Div to force closure of a container div 
 * with floated children 
 */
#content-closure-div {
clear:right;
line-height:0;
height:0;
}

/* Maps */
.embedded-map {
height:MAP_HEIGHT;
width:MAP_WIDTH;
}
