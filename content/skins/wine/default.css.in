/* SECTION 1: Values and macros (common and skin-specific) {{{1 */
  /* Common dimensions {{{2 */
#define WIDTH_FULL     880px /* overall width */
#define WIDTH_SIDEBAR  180px /* width of primary sidebar */
#define WIDTH_WORKAREA 700px /* width of workarea */
#define WIDTH_APP      520px   /* app part of workarea */
#define WIDTH_MULTIBAR 180px   /* multibar part of workarea */
#define HEIGHT_CONTENT 400px
  /* }}}2 Common dimensions */
  /* Skin-specific colors {{{2 */
#define WINESKIN_RED         #983B59
#define WINESKIN_DARK_RED    #66273B
#define WINESKIN_DARKER_RED  #4C1E2D
#define WINESKIN_LIGHT_RED   #A84B69
#define WINESKIN_LIGHTER_RED #B85B79
#define WINESKIN_BORDER      #333
  /* }}}2 Skin-specific colors */
/* }}}1 Values and macros (common and skin-specific) */
/* SECTION 2: Common CSS for all skins {{{1 */
#include "../common/default.css.h"
/* }}}1 */
/* SECTION 3: Common toplevel containers {{{1 */
  /* These control the base look and layout; required for all skins */
body {
color: #333;
font-family:'lucida grande',tahoma,verdana,arial,sans-serif;
font-size:13px;
font-weight:normal;
background: #FFF url('/skins/wine/red_bar.png') repeat-x;
PACKED();
}

#content-div {
display:block;
width:WIDTH_FULL;
margin: 0px auto auto auto;
min-height:HEIGHT_CONTENT;
height:auto;
}

#sidebar-div {
float:left;
display:block;
width:WIDTH_SIDEBAR;
min-height:HEIGHT_CONTENT;
border:0px;
margin:0px;
padding:0px;
height:600px;
}

#workarea-div {
float:left;
display:block;
position:static;
width:WIDTH_WORKAREA;
min-height:HEIGHT_CONTENT;
border-right:1px solid WINESKIN_BORDER;
border-bottom:1px solid WINESKIN_BORDER;
border-left:1px solid WINESKIN_BORDER;
border-top:0px;
margin:0px -1px -1px -1px;
padding:0px;
}

#application-div {
float:left;
display:block;
width:WIDTH_APP;
min-height:HEIGHT_CONTENT;
border:0px;
margin:0px;
padding:0px;
}

#multibar-div {
float:left;
display:block;
width:WIDTH_MULTIBAR;
min-height:HEIGHT_CONTENT;
border:0px;
margin:0px;
overflow:hidden;
padding:0px;
}

#tagline-div {
}
/* }}}1 Common toplevel containers */
/* SECTION 4: Common toplevel content {{{1 */
/* SECTION 4.1: Main navigation (top-nav) {{{2 */
#top-nav-div {
float:right;
border-top:1px solid WINESKIN_BORDER;
border-left:1px solid WINESKIN_BORDER;
border-right:1px solid WINESKIN_BORDER;
border-bottom:0;
margin-top:-1px;
margin-left:-1px;
margin-right:-1px;
margin-bottom:0;
background-color:WINESKIN_LIGHT_RED;
color:white;
height: 32px;
width:WIDTH_WORKAREA;
}

ul.top-nav {
font-weight: bold;
font-size: 12px;
margin:0px;
padding:0px;
height: 32px;
}

li.top-nav {
float: left;
border:0px;
margin:0px;
padding:0px;
height:32px;
}

li.top-nav-meta {
float: right;
border:0px;
margin: 0px;
padding:0px;
height: 32px;
}

a.top-nav {
padding-left: 10px;
padding-right: 10px;
padding-top: 8px;
overflow:hidden;
color:#FFF;
background-color:WINESKIN_LIGHT_RED;
height: 22px;
display:inline-block;
}

a.top-nav:hover, li.top-nav:hover, li.top-nav-meta:hover {
background-color:WINESKIN_LIGHTER_RED;
color:#FFF;
}
/* }}}2 Main navigation (top-nav) */
/* SECTION 4.2: Footer {{{2 */
  /* Footer overall {{{3 */
#footer-div {
width:WIDTH_FULL;
height: 36px;
margin: 0px auto 0px auto;
}

.footer-text {
display:block;
font-size:9pt;
font-weight: normal;
width: WIDTH_FULL;
margin:0px auto 0px auto;
border:0px;
padding:0px;
text-align: center;
}
  /* }}}3 Footer overall */
  /* Footer contents {{{3 */
#footer-copyright-div {
}
#footer-contact-div {
}
#footer-validator-div {
}
  /* }}}3 Footer contents */
/* }}}2 Footer */

/* PARTNER section */
#partner-div {
display:inline-block;
width:WIDTH_SIDEBAR;
height: 36px;
margin: 0px auto 0px auto;
/*border: 1px solid WINESKIN_BORDER;*/
}

ul.partner-nav {
font-weight: normal;
font-size: 10px;
margin:0px;
padding:0px;
/*background-color: #000;*/
height: 36px;
}

li.partner-nav-extern {
float: left;
border: 0px;
margin-left: 1px;
margin-right: 1px;
padding-top: 2px;
height: 36px;
}

li.partner-nav-ref {
float: left;
border: 0px;
margin-left: 4px;
margin-right: 4px;
padding-top: 2px;
height: 36px;
}

a.partner-nav {
padding: 0px;
border: 0px;
margin: 0px;
overflow:hidden;
height: 36px;
}

/*
 * Generic block support 
 */
.block-outer-div {
margin-top:10px;
}

.block-centered {
margin-left:auto;
margin-right:auto;
display:block;
text-align:center;
}

.block-framed {
margin:0 auto 0 auto;
padding:0;
border:1px solid WINESKIN_BORDER;
}

.image-caption {
display:block;
text-align:center;
}

#validator-div {
width:180px;
float:right;
}


#red-bar-spacer {
display:block;
height:10px;
width:100%;
}

#red-bar-content {
width:WIDTH_FULL;
height:32px;
margin:0 auto 0 auto;
}

#red-bar-logo {
width:WIDTH_SIDEBAR;
height:32px;
float:left;
margin:auto;
}

.youtube-embed {
width:480px;
height:385px;
margin: 5px auto 5px auto;
}
