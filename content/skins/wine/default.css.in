/* SECTION 1:Values and macros (common and skin-specific) {{{1 */
  /* Common dimensions {{{2 */
#define WIDTH_FULL     880px /* overall width */
#define WIDTH_SIDEBAR  180px /* width of primary sidebar */
#define WIDTH_WORKAREA 700px /* width of workarea */
#define WIDTH_APP      520px   /* app part of workarea */
#define WIDTH_MULTIBAR 180px   /* multibar part of workarea */
#define WIDTH_BOOKSHELF 200px /* Bookshelf sidebar */
#define WIDTH_BOOKWORK  660px /* Workarea for book editing */
#define HEIGHT_CONTENT 400px
  /* }}}2 Common dimensions */
  /* Skin-specific colors {{{2 */
#define WINESKIN_RED         #983B59
#define WINESKIN_DARK_RED    #66273B
#define WINESKIN_DARKER_RED  #4C1E2D
#define WINESKIN_LIGHT_RED   #A84B69
#define WINESKIN_LIGHTER_RED #B85B79
#define WINESKIN_BORDER      #333
  /* }}}2 Skin-specific colors */
/* }}}1 Values and macros (common and skin-specific) */
/* SECTION 2:Common CSS for all skins {{{1 */
#include "../common/default.css.h"
/* }}}1 */
/* SECTION 3:Common toplevel containers {{{1 */
  /* These control the base look and layout; required for all skins */
body {
color:#333;
font-family:'lucida grande',tahoma,verdana,arial,sans-serif;
font-size:13px;
font-weight:normal;
background:#FFF url('/skins/wine/red_bar.png') repeat-x;
PACKED();
}

#content-div {
display:block;
width:WIDTH_FULL;
margin:0px auto auto auto;
min-height:HEIGHT_CONTENT;
height:auto;
}

#sidebar-div {
float:left;
display:block;
width:WIDTH_SIDEBAR;
min-height:HEIGHT_CONTENT;
PACKED();
height:600px;
}

#workarea-div {
float:left;
display:block;
width:WIDTH_WORKAREA;
min-height:HEIGHT_CONTENT;
position:static;
border-right:1px solid WINESKIN_BORDER;
border-bottom:1px solid WINESKIN_BORDER;
border-left:1px solid WINESKIN_BORDER;
border-top:0px;
margin:0px -1px -1px -1px;
padding:0px;
}

#application-div {
float:left;
display:block;
width:WIDTH_APP;
min-height:HEIGHT_CONTENT;
PACKED();
}

#multibar-div {
float:left;
display:block;
width:WIDTH_MULTIBAR;
min-height:HEIGHT_CONTENT;
PACKED();
overflow:hidden;
}

#tagline-div {
margin-left:auto;
margin-right:auto;
text-align:center;
font-style:italic;
font-size:14pt;
}
/* }}}1 Common toplevel containers */
/* SECTION 4:Common toplevel content {{{1 */
/* SECTION 4.1:Main navigation (top-nav) {{{2 */
#define HEIGHT_NAV 32px
#top-nav-div {
background-color:WINESKIN_LIGHT_RED;
color:white;
width:WIDTH_WORKAREA;
margin:-1px -1px 0px -1px;
border-top:1px solid WINESKIN_BORDER;
border-left:1px solid WINESKIN_BORDER;
border-right:1px solid WINESKIN_BORDER;
border-bottom:0;
height:HEIGHT_NAV;
float:right;
}

ul.top-nav {
font-weight:bold;
font-size:12px;
margin:0px;
padding:0px;
height:HEIGHT_NAV;
}

li.top-nav {
float:left;
PACKED();
height:HEIGHT_NAV;
}

li.top-nav-meta {
float:right;
height:HEIGHT_NAV;
PACKED();
}

a.top-nav, a.top-nav-meta {
padding-left:10px;
padding-right:10px;
padding-top:8px;
display:inline-block;
overflow:hidden;
color:#FFF;
background-color:WINESKIN_LIGHT_RED;
height:22px;
}

a.top-nav:hover, a.top-nav-meta:hover, li.top-nav:hover, li.top-nav-meta:hover {
color:#FFF;
background-color:WINESKIN_LIGHTER_RED;
}
/* }}}2 Main navigation (top-nav) */
/* SECTION 4.2:Menu generics {{{2 */
  /* SECTION 4.3: Popup menus {{{3 */
#define HEIGHT_MENU_POPUP 24px
div.menu-popup {
position:absolute;
display:none;
border-left:1px solid black;
border-right:1px solid black;
border-bottom:1px solid black;
margin:0px;
padding:0px;
}

ul.menu-popup {
font-weight:bold;
font-size:12px;
color:#FFF;
PACKED();
background-color:WINESKIN_LIGHT_RED;
}

li.menu-popup {
margin:0px;
height:HEIGHT_MENU_POPUP;
padding:0px 8px;
}

a.menu-popup {
padding-left:8px;
margin-left:-8px;
padding-right:8px;
margin-right:-8px;
padding-top:4px;
display:inline-block;
overflow:hidden;
color:#FFF;
background-color:WINESKIN_LIGHT_RED;
height:20px; /* HEIGHT_MENU_POPUP - padding-top */
width:100%;
}

a.menu-popup:hover, li.menu-popup:hover {
color:#FFF;
background-color:WINESKIN_LIGHTER_RED;
}
   /* }}}3 Popup menus */
/* }}}2 Menu generics */
/* SECTION 4.3:Footer {{{2 */
  /* Footer overall {{{3 */
#footer-div {
width:WIDTH_FULL;
height:36px;
margin:0px auto 0px auto;
}

.footer-text {
display:block;
font-size:9pt;
font-weight:normal;
width:WIDTH_FULL;
margin:0px auto 0px auto;
border:0px;
padding:0px;
text-align:center;
}
  /* }}}3 Footer overall */
  /* Footer contents {{{3 */
#footer-copyright-div {
}
#footer-contact-div {
}
#footer-validator-div {
width:180px;
float:right;
}
  /* }}}3 Footer contents */
/* }}}2 Footer */
/* SECTION 4.4:Partner links {{{2 */
#partner-div {
display:inline-block;
width:WIDTH_SIDEBAR;
height:36px;
margin:0px auto;
}

ul.partner-nav {
font-weight:normal;
font-size:10px;
margin:0px;
padding:0px;
height:36px;
}

li.partner-nav-extern {
float:left;
border:0px;
margin-left:1px;
margin-right:1px;
padding-top:2px;
height:36px;
}

li.partner-nav-ref {
float:left;
border:0px;
margin-left:4px;
margin-right:4px;
padding-top:2px;
height:36px;
}

a.partner-nav {
padding:0px;
border:0px;
margin:0px;
overflow:hidden;
height:36px;
}
/* }}}2 Partner links */
/* SECTION 4.5:Generic block support {{{2 */
.block-outer-div {
margin-left:auto;
margin-right:auto;
margin-top:10px;
}

.block-image {
display:block;
margin-left:auto;
margin-right:auto;
}

.block-framed {
margin:0 auto 0 auto;
padding:0;
border:1px solid WINESKIN_BORDER;
}

.image-caption {
display:block;
text-align:center;
}
/* }}}2 Generic block support */
