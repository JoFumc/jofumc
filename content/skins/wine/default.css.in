/* SECTION 1: Common values and macros */
#define WINESKIN_RED #983B59
#define WINESKIN_LIGHT_RED #A84B69
#define WINESKIN_LIGHTER_RED #B85B79
#define WINESKIN_BORDER #333
#define WIDTH_FULL 880px
#define WIDTH_LEFT 180px
#define WIDTH_RIGHT 700px
#define HEIGHT_CONTENT 400px

/* SECTION 2: The bits */
body {
color: #333;
font-family:'lucida grande',tahoma,verdana,arial,sans-serif;
font-size:13px;
font-weight:normal;
background: #FFF url('/skins/wine/red_bar.png') repeat-x;
padding:0px 0px 0px 0px;
margin:0px 0px 0px 0px;
}

#skin-default-header {
height:10px;
}

#red-bar-div {
position:absolute;
left:0;
top:0;
display:block;
margin:0 0 0 0;
background:WINESKIN_RED;
width:100%;
height:42px;
}

#red-bar-content {
height: 32px;
background: url('/skins/wine/logo_header_white.png') repeat-y;
width:WIDTH_FULL;
margin: 0 auto 0 auto;
padding-top:9px;
}


/* Special images */
img.frameless {
margin:0px;
border:0px;
padding:0px;
}

/* NAV section */
#top-nav-div {
position:relative;
left:90px;
margin: 0px auto -1px auto;
border-left: 1px solid WINESKIN_BORDER;
border-right: 1px solid WINESKIN_BORDER;
border-top: 1px solid WINESKIN_BORDER;
/*background-color: #FE4110;*/
background-color:WINESKIN_LIGHT_RED;
height: 30px;
width:WIDTH_RIGHT;
}

ul.top-nav {
list-style-type: none;
list-style-image: none;
font-weight: bold;
font-size: 12px;
margin:0px;
padding:0px;
height: 30px;
}

li.top-nav {
float: right;
border:0px;
margin:0px;
padding:0px;
height:30px;
}

li.top-nav-meta {
float: right;
border:0px;
margin: 0px;
padding:0px;
height: 30px;
}

a.top-nav {
padding-left: 10px;
padding-right: 10px;
padding-top: 8px;
overflow:hidden;
color:#FFF;
/*background-color:WINESKIN_LIGHT_RED;*/
text-decoration: none;
height: 22px;
display:inline-block;
}

li.top-nav:hover, li.top-nav-meta:hover {
background-color:WINESKIN_LIGHTER_RED;
color:#FFF;
text-decoration: none;
}

/* PARTNER section */
#partner-div {
display:inline-block;
width:WIDTH_LEFT;
height: 36px;
margin: 0px auto 0px auto;
border: 1px solid WINESKIN_BORDER;
}

ul.partner-nav {
list-style-type: none;
list-style-image: none;
font-weight: normal;
font-size: 10px;
margin:0px;
padding:0px;
/*background-color: #000;*/
height: 36px;
}

li.partner-nav-extern {
float: left;
border: 0px;
margin-left: 1px;
margin-right: 1px;
padding-top: 2px;
height: 36px;
}

li.partner-nav-ref {
float: left;
border: 0px;
margin-left: 4px;
margin-right: 4px;
padding-top: 2px;
height: 36px;
}

a.partner-nav {
padding: 0px;
border: 0px;
margin: 0px;
overflow:hidden;
text-decoration: none;
height: 36px;
}

/* FOOTER section */
#footer-div {
width:850px;
height: 36px;
margin: 0px auto 0px auto;
}

#copyright-div {
font-size:9pt;
font-weight: normal;
width: 850px;
margin:0px auto 0px auto;
border:0px;
padding:0px;
text-align: center;
}

/* CONTENT PANES */
.content-wide-div {
display:block;
width:WIDTH_FULL;
margin: 0px auto 0px auto;
min-height:HEIGHT_CONTENT;
}

#sidebar-div {
float:left;
display:block;
width:WIDTH_LEFT;
min-height:HEIGHT_CONTENT;
border:0px;
margin:0px;
padding:0px;
}

#workarea-div {
float:right;
display:block:
position:static;
width:WIDTH_RIGHT;
min-height:HEIGHT_CONTENT;
border:1px solid WINESKIN_BORDER;
border-top:0px;
margin:0px -1px -1px -1px;
padding:0px;
}
