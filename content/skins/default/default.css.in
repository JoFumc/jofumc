/* SECTION 1: Common values and macros */
  /* Colors */
#define JOF_RED #C82020

  /* Dimensions */
#define WIDTH_FULL     850px /* Overall width */
#define WIDTH_SIDEBAR  210px /* Left column width */
#define WIDTH_WORKAREA 640px /* Right workarea width */
#define WIDTH_APP      460px /*   App area (left workarea) */
#define WIDTH_MULTIBAR 180px /*   Multibar (right workarea) */
#define HEIGHT_CONTENT 400px 

  /* App-specific */
#define MAP_HEIGHT 350px
#define MAP_WIDTH  350px

/* SECTION 2: Import common CSS */
#include "../common/default.css.h"

body {
font-family:sans-serif;
font-size:11pt;
background: #FFFFFF url('/skins/default/gradient_navy.png') repeat-x;
color:black;
padding:0px 0px 0px 0px;
margin:0px 0px 0px 0px;
}

#skin-default-header {
display:block;
width:WIDTH_FULL;
height:100px;
/*background: #FFF url('/skins/default/header_bg.png') no-repeat; */
margin: 10px auto 0px auto;
border: 1px solid black;
}

/* NAV section */
#top-nav-div {
width:WIDTH_FULL;
margin: 0px auto 0px auto;
border-left: 1px solid black;
border-right: 1px solid black;
border-bottom: 1px solid black;
background-color: JOF_RED;
color:white;
height: 16px;
}


ul.top-nav {
font-weight: bold;
font-size: 12px;
margin:0px;
padding:0px;
/*background-color: #000;*/
height: 16px;
}

li.top-nav {
float: left;
border-right: 1px solid black;
margin: 0px;
height: 16px;
padding:0px;
}

li.top-nav-meta {
float: right;
border-left: 1px solid black;
margin: 0px;
height: 16px;
padding:0px;
}

a.top-nav {
padding-left: 8px;
padding-right: 8px;
display:inline-block;
overflow:hidden;
color:#FFF;
/*background-color:#FE4110;*/
background-color:JOF_RED;
height: 16px;
}

a.top-nav:hover, li.top-nav:hover {
/*color:#FE4110;*/
color:JOF_RED;
background-color:#FFF;
}

/* FOOTER section */
#footer-div {
width:WIDTH_FULL;
height: 36px;
margin: 0px auto 0px auto;
}

/* PARTNER block */
#partner-div {
width:WIDTH_FULL;
height: 36px;
margin: 0px auto 0px auto;
}


ul.partner-nav {
font-weight: normal;
font-size: 10px;
margin:0px;
padding:0px;
/*background-color: #000;*/
height: 36px;
}

li.partner-nav-extern {
float: right;
border: 0px;
margin-left: 1px;
margin-right: 1px;
padding-top: 2px;
height: 36px;
}

li.partner-nav-ref {
float: left;
border: 0px;
margin-left: 4px;
margin-right: 4px;
padding-top: 2px;
height: 36px;
}

a.partner-nav {
padding: 0px;
border: 0px;
margin: 0px;
overflow:hidden;
height: 36px;
}

#copyright-div {
font-size:9pt;
font-weight: normal;
width: WIDTH_FULL;
margin:0px auto 0px auto;
border:0px;
padding:0px;
text-align: center;
}

/* toplevel content areas */
#content-div {
display:block;
width:WIDTH_FULL;
min-height: HEIGHT_CONTENT;
border-left: 1px solid black;
border-right: 1px solid black;
border-bottom: 1px solid black;
border-top: 0;
margin: 0px auto 0px auto;
background-color: #FFF;
color:black;
}

#sidebar-div {
float:left;
display:block;
width:WIDTH_SIDEBAR;
min-height: HEIGHT_CONTENT;
PACKED();
}

#workarea-div {
float:left;
display:block;
width:WIDTH_WORKAREA;
min-height: HEIGHT_CONTENT;
padding:0px;
border-top:0px;
border-bottom:0px;
border-right:0px;
border-left: 1px solid black;
margin-top:0px;
margin-bottom:0px;
margin-right:0px;
margin-left: -1px;
}

#application-div {
float:left;
display:block;
width:WIDTH_APP;
min-height:HEIGHT_CONTENT;
PACKED();
}

#multibar-div {
float:left;
display:block;
width:WIDTH_MULTIBAR;
min-height: HEIGHT_CONTENT;
PACKED();
}

/* Maps */
#block-map-div {
width:MAP_WIDTH;
margin-top:10px;
margin-left:auto;
margin-right:auto;
}

.embedded-map {
height:MAP_HEIGHT;
width:MAP_WIDTH;
}

/*
 * Generic block support 
 */
ul.block-nav {
font-weight: bold;
font-size: 12px;
margin:0px;
padding:0px;
height:16px;
background-color:white;
color:black;
}

li.block-nav {
float:left;
height:16px;
background-color:JOF_RED;
color:white;
border-left:1px solid black;
border-top:1px solid black;
border-right:1px solid black;
margin:-1px 1px 0px 1px;
padding:0px 4px 0px 4px;
}

li.block-nav-selected {
float:left;
height:16px;
color:white;
background-color:JOF_RED;
border-left:3px solid black;
border-top:3px solid black;
border-right:3px solid black;
margin:-3px 1px 0px 1px;
padding:0px 4px 0px 4px;
}

a.block-nav:hover, li.block-nav:hover, li.block-nav-selected:hover {
/*color:#FE4110;*/
color:JOF_RED;
background-color:#FFF;
}
