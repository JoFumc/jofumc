body {
font-family:sans-serif;
font-size:11pt;
background: #FFFFFF url('/skins/default/gradient.png') repeat-x;
padding:0px 0px 0px 0px;
margin:0px 0px 0px 0px;
}

#skin-default-header {
display:block;
width:850px;
background: #FFF;
margin: 10px auto 0px auto;
border: 1px solid black;
}

.header-quote {
width: 200px;
font-size: 14pt;
font-style: italic;
float: right;
text-align:center;
padding-right: 10px;
}

/* NAV section */
#top-nav-div {
width:850px;
margin: 0px auto 0px auto;
border-left: 1px solid black;
border-right: 1px solid black;
border-bottom: 1px solid black;
background-color: #FE4110;
height: 16px;

}


ul.top-nav {
list-style-type: none;
list-style-image: none;
font-weight: bold;
font-size: 12px;
margin:0px;
padding:0px;
/*background-color: #000;*/
height: 16px;
}

li.top-nav {
float: left;
border-left: 1px solid white;
margin: 0px;
height: 16px;
}

a.top-nav {
padding-left: 4px;
padding-right: 4px;
color:#FFF;
background-color:#FE4110;
text-decoration: none;
height: 16px;
}

a.top-nav:hover, li.top-nav:hover {
color:#FE4110;
background-color:#FFF;
text-decoration: none;
}
