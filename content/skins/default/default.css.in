#define FULL_WIDTH 850px
#define SIDEBAR_WIDTH 210px
#define WORKAREA_WIDTH 640px
#define CONTENT_HEIGHT 400px
#define JOF_RED #C82020

#define MAP_HEIGHT 350px
#define MAP_WIDTH  350px

body {
font-family:sans-serif;
font-size:11pt;
background: #FFFFFF url('/skins/default/gradient_navy.png') repeat-x;
color:black;
padding:0px 0px 0px 0px;
margin:0px 0px 0px 0px;
}


/* Special images */
img.frameless {
margin:0px;
border:0px;
padding:0px;
}

#skin-default-header {
display:block;
width:FULL_WIDTH;
height:100px;
/*background: #FFF url('/skins/default/header_bg.png') no-repeat; */
margin: 10px auto 0px auto;
border: 1px solid black;
}

.header-quote {
width: 200px;
font-size: 14pt;
font-style: italic;
float: right;
text-align:center;
padding-right: 10px;
}

/* NAV section */
#top-nav-div {
width:FULL_WIDTH;
margin: 0px auto 0px auto;
border-left: 1px solid black;
border-right: 1px solid black;
border-bottom: 1px solid black;
background-color: JOF_RED;
color:white;
height: 16px;
}


ul.top-nav {
list-style-type: none;
list-style-image: none;
font-weight: bold;
font-size: 12px;
margin:0px;
padding:0px;
/*background-color: #000;*/
height: 16px;
}

li.top-nav {
float: left;
border-right: 1px solid black;
margin: 0px;
height: 16px;
padding:0px;
}

li.top-nav-meta {
float: right;
border-left: 1px solid black;
margin: 0px;
height: 16px;
padding:0px;
}

a.top-nav {
padding-left: 8px;
padding-right: 8px;
display:inline-block;
overflow:hidden;
color:#FFF;
/*background-color:#FE4110;*/
background-color:JOF_RED;
text-decoration: none;
height: 16px;
}

a.top-nav:hover, li.top-nav:hover {
/*color:#FE4110;*/
color:JOF_RED;
background-color:#FFF;
text-decoration: none;
}

/* FOOTER section */
#footer-div {
width:FULL_WIDTH;
height: 36px;
margin: 0px auto 0px auto;
}

/* PARTNER block */
#partner-div {
width:FULL_WIDTH;
height: 36px;
margin: 0px auto 0px auto;
}


ul.partner-nav {
list-style-type: none;
list-style-image: none;
font-weight: normal;
font-size: 10px;
margin:0px;
padding:0px;
/*background-color: #000;*/
height: 36px;
}

li.partner-nav-extern {
float: right;
border: 0px;
margin-left: 1px;
margin-right: 1px;
padding-top: 2px;
height: 36px;
}

li.partner-nav-ref {
float: left;
border: 0px;
margin-left: 4px;
margin-right: 4px;
padding-top: 2px;
height: 36px;
}

a.partner-nav {
padding: 0px;
border: 0px;
margin: 0px;
overflow:hidden;
text-decoration: none;
height: 36px;
}

#copyright-div {
font-size:9pt;
font-weight: normal;
width: FULL_WIDTH;
margin:0px auto 0px auto;
border:0px;
padding:0px;
text-align: center;
}

/* toplevel content areas */
#content-div {
display:block;
width:FULL_WIDTH;
min-height: CONTENT_HEIGHT;
border-left: 1px solid black;
border-right: 1px solid black;
border-bottom: 1px solid black;
border-top: 0;
margin: 0px auto 0px auto;
background-color: #FFF;
color:black;
}
#sidebar-div {
float:left;
display:block;
width:SIDEBAR_WIDTH;
min-height: CONTENT_HEIGHT;
border:0px;
margin:0px;
padding:0px;
}

#workarea-div {
float:right;
display:block;
width:WORKAREA_WIDTH;
min-height: CONTENT_HEIGHT;
padding:0px;
border-top:0px;
border-bottom:0px;
border-right:0px;
border-left: 1px solid black;
margin-top:0px;
margin-bottom:0px;
margin-right:0px;
margin-left: -1px;
}

/* Div to force closure of a container div 
 * with floated children 
 */
#content-closure-div {
clear:right;
line-height:0;
height:0;
}


/* Maps */
#block-map-div {
width:MAP_WIDTH;
margin-top:10px;
margin-left:auto;
margin-right:auto;
}

.embedded-map {
height:MAP_HEIGHT;
width:MAP_WIDTH;
}

/*
 * Generic block support 
 */
ul.block-nav {
list-style-type: none;
list-style-image: none;
font-weight: bold;
font-size: 12px;
margin:0px;
padding:0px;
height:16px;
background-color:white;
color:black;
}

li.block-nav {
float:left;
height:16px;
background-color:JOF_RED;
color:white;
border-left:1px solid black;
border-top:1px solid black;
border-right:1px solid black;
margin:-1px 1px 0px 1px;
padding:0px 4px 0px 4px;
}

li.block-nav-selected {
float:left;
height:16px;
color:white;
background-color:JOF_RED;
border-left:3px solid black;
border-top:3px solid black;
border-right:3px solid black;
margin:-3px 1px 0px 1px;
padding:0px 4px 0px 4px;
}

a.block-nav:hover, li.block-nav:hover, li.block-nav-selected:hover {
/*color:#FE4110;*/
color:JOF_RED;
background-color:#FFF;
text-decoration: none;
}
